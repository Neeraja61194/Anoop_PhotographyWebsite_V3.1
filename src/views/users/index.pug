extends ../layout.pug

block content 
  block content 
  link(rel='stylesheet', type='text/css', href='/css/style.css')
  link(rel='stylesheet', type='text/css', href='/css/contact.css')
  link(rel='stylesheet', type='text/css', href='/css/adminProfile.css')
  link(rel='stylesheet', type='text/css', href='/css/modal.css')
  link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css")
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', integrity='sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN', crossorigin='anonymous')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')

  body
    #home.main_container
      .navbar(data-aos="fade-down")
        .logo
          a(href='#' style="text-decoration: none;" data-aos="zoom-in") 
            span Anoop Arunan
            span.subTitle  Photography
          
        .menu-toggle(data-aos="fade-down")
        .navbar_items
          ul
            li
              a.active(href='#') Home
            li
              a(href='#about') About
            li
              a(href='#photos') Photos
            li
              a(href='#services') Services
            li
              a(href='#contactus') Contact    
      
      .parallax5 
        each mainImage in Slot_1_List
          img(src='img/Slot_1_Image/' + mainImage alt='Image 1' style="background: linear-gradient(to top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.7) 100%);")
          //- h1 Hello
      //- section
      //-   #about.about
      //-     .row.row-cols-1.row-cols-sm-2
      //-       .col.mb-4
      //-         div(class="item-text" data-aos="fade-right")
      //-           br
      //-           h1=config_aboutHeading
      //-           br
      //-           p.big-text=config_About_Para1
      //-           p Learn how to make a responsive website using HTML, CSS and bootstrap
      //-           a.btn.btn-first(href='#') Like Video
      //-           a.btn.btn-second(href='#') Subscribe Video
      //-       .col.mb-4
      //-         div(class="item-img" data-aos="fade-left")
      //-           each slot2 in Slot_2_List
      //-             img.img-responsive(src='img/Slot_2_Image/' + slot2 style="box-shadow: 15px 10px 20px rgb(0, 0, 0);")     
            
      section
        #about.about
          //- .row.row-cols-1.row-cols-sm-2
            //- .col.mb-4
          .two-col
            div(class="item-text" data-aos="fade-right")
              br
              h1=config_aboutHeading
              br
              p.big-text=config_About_Para1
              p.big-text=config_About_Para2

          //- .col.mb-4
          .two-col
            div(class="item-img" data-aos="fade-left")
              each slot2 in Slot_2_List
                img.img-responsive(src='img/Slot_2_Image/' + slot2 style="box-shadow: 15px 10px 20px rgb(0, 0, 0);")     
          
      .background-img
        each slot3 in Slot_3_List
          img(src='img/Slot_3_Image/' + slot3)
        
      .text_parallax 
        #photos.photos
          h2.w3-text-light-grey(data-aos="fade-down" style="color:rgb(8, 92, 161);") Gallery 
          br
          br
          br
          .team-area
            .row
              each folder in variables.folders
                .col-6(data-aos="zoom-in")
                  a(href="/folders/" + folder._id style="text-decoration: none;" class="photo-link")
                    .single-team
                      img(src='/img/photos/' + folder.folder_img alt=folder.folder_img)
                      .team-text
                        h2= folder.name
                        p Collection
                        h1
                          i.fa.fa-hand-pointer-o.icon-4x(aria-hidden='true')
                      .content
                        h1(style="text-shadow: 0 0 10px #000000;")= folder.name
                        h1 . . .
        .text_parallax
          .team_area_mobile 
            .col.justify-content-center
              each folder in variables.folders
                .row.banner-image(data-aos="zoom-in")
                  a(href="/folders/" + folder._id style="text-decoration: none;" class="photo-link")
                      img(src='/img/photos/' + folder.folder_img alt=folder.folder_img)
                      .content
                        h2(style="text-shadow: 0 0 10px #000000;")= folder.name
                        h1 . . .
      br
      br
      br
      .background-img
        each slot4 in Slot_4_List
          img(src='img/Slot_4_Image/' + slot4)
        br
        br
      .text_parallax
        section(class="dark")
          #services.services
            h3 What I can do for you . . .
            hr
            br
            //- .two-col(data-aos="fade-down" class="fading")
            .two-col(data-aos="fade-down")
              p=config_Services_Para1
              p=config_Services_Para2
              p=config_Services_Para3
              //- p I provide exclusive coverage on your special day, be it your betrothal or your wedding or that incredibly special proposal, birthdays and Baby showers. In addition, I cover functions, events and celebrations. 
              //- p I also specialize in portfolio shoot and conceptual photography. If you have an idea for a shoot, I can work with you to make it a reality. Make it come to life.
              br
              hr
            .two-col(data-aos="fade-down")
              h3(style="float: right;") You can Follow me here ...
              br
              br
              br
              br
              div(class="follow-icons")
                ul 
                  li 
                    a(href="https://www.youtube.com/channel/UCm1dgWauzhgFifckipmClzA" style="text-decoration: none;color:white;").fa.fa-youtube(aria-hidden='true') 
                  li
                    a(href="https://instagram.com/anoop_arunan?igshid=17n7ntap5ifoq" style="text-decoration: none;color:white;").fa.fa-instagram(aria-hidden='true')
                  li
                    a(href="mailto:annoop007@gmail.com" style="text-decoration: none;color:white;").fa.fa-envelope(aria-hidden='true')

      #contactus
        .contact-img
          each slot5 in Slot_5_List
            img(src='img/Slot_5_Image/' + slot5)
          .loginBox
            .glass(data-aos="fade-down")
              h3 Let's Get In Touch !!
              //- h5 I would love to hear from you...
              form(id='contactForm' onsubmit="return sendData()" action="/contact" method="post")
                .inputBox
                  input(type='text', name='name', placeholder='Name' required='')
                .inputBox
                  input(type='text', name='email', placeholder='Email' required='')
                .inputBox
                  input(type='text', name='phone', placeholder='Phone Number(Optional)')
                .inputBox
                  label(class="event") Date of Event (Preferably Weekends and Holidays):
                  br
                  input(class="eventDate" type='date' name='date')
                  //-input#date.textbox-n(placeholder='Date of Event (Preferably Weekends and Holidays)' type='text' onfocus="(this.type='date')")
                .inputBox
                  input(type='text', name='location', placeholder='Location')
                .inputBox
                  input(type='text', name='eventType', placeholder='What kind of service are you looking for?')
                br
                .inputBox
                  input(type='textarea', name='message', placeholder='Enter message' rows="16" cols="70" style="white-space: pre-wrap; padding: 12px 20px;background: transparent;")
                br
                br
                input(type='submit', name='', value='Send Message' onclick="Contact_MsgAlert()")
          //- .contact-address
          //-   h1 Address
          //-   h4 Phone :
          //-   h6 You can find me here 
          //-   span.fa.fa-facebook-square(aria-hidden='true') 
          //-   br
          //-   span.fa.fa-instagram(aria-hidden='true')
      .arrow
        a(href='#home')
          img(src='https://i.imgur.com/wre6n0O.png', alt='up_arrow')
