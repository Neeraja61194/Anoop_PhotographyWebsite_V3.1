    script(type='text/javascript').
      $(document).ready(function(){
      $('.menu-toggle').click(function(){
      $('.menu-toggle').toggleClass('active')
      $('.navbar_items').toggleClass('active')
      })
      })
    script(type='text/javascript').
      document.addEventListener('contextmenu', event => event.preventDefault());
    
    script.
      $(function(){
        $('.background-img img').each(function(){
            var img = $(this).hide();
            img.parent().css('background-image', 'url(' + img.prop('src') + ')');
        });
        });
    script.
      $(function(){
        $('.contact-img img').each(function(){
            var img = $(this).hide();
            img.parent().css('background-image', 'url(' + img.prop('src') + ')');
        });
        });
    script.
      $(function(){
        $('.parallax5 img').each(function(){
            var img = $(this).hide();
            img.parent().css('background-image', 'url(' + img.prop('src') + ')');
  
        });
        });

    script. 
      function Contact_MsgAlert(){
          alert("A confirmation Email will be sent to the email address you provided in a few minutes. \nIf you did not receive an email then enter your correct email address and fill the form again.");
        }

    script(src="https://unpkg.com/aos@next/dist/aos.js")
    script. 
      AOS.init({
        duration: 1600,
      });
    

          
