extends ../../layout.pug

block content
    .container
        br
        br
        h2(style="color: red;") Hello Admins! Welcome to Login Page
        h1=restrict
        br
        h3 Login
        br
        -if(message)
            .alert.alert-danger !{message}
        if messages.error
            .alert.alert-danger
                div= messages.error
        if messages.info
            .alert.alert-info
                div= messages.info
        if messages.success
            .alert.alert-success
                div= messages.success
                
        form(action='/Admin_Login', method='POST' style="width: 50%;")
            .form-group
                label(for='username') Username
                input.form-control(type='text', name='username', required='' autofocus)
            .form-group
                label(for='password') Password
                input.form-control(type='password', name='password' required='')
            button.btn.btn-primary(type='submit') Login
            a.btn.btn-link(href='/forgotPassword') Forgot Password?
            
            

        